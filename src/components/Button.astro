---
import Link from './LocalizedLink.astro';

const { to = '', target = '', classes = '', as = 'button' } = Astro.props;

const styles = `
at-a
mx-2 my-2
px-6 py-2
w-fit
text-white
text-xs
uppercase
bg-primary
rounded-full
transition duration-150 ease-in-out
hover:bg-primary-light
focus:ring-2
focus:ring-offset-2
focus:ring-primary-light
${classes}`;

---
{as === 'link' && (
  <Link class={styles} to={to}>
    <slot />
  </Link>
)}

{as === 'a' && (
  <a class={styles} href={to} target={target}>
    <slot />
  </a>
)}

{as === 'button' && (
  <button class={styles}>
    <slot />
  </button>
)}

---
export interface Props {
  item: SectionItem;
}

import getImagePath from '@/lib/getImagePath';
import Image from '@/components/Image.astro';

const { item: { title, subtitle, content, image } } = Astro.props as Props;
---
<div class="text-center mb-12">
  {image?.src && <Image src={getImagePath(image.src)} alt={image.alt || title || content} classes="mx-auto mb-3 w-56 h-56 border-4 rounded-full" caption={image.caption} />}
  <div class="mb-4 text-muted">{content}</div>
  <div class="text-sm text-muted before:content-['-']">
    {title}{subtitle && <cite>{`, ${subtitle}`}</cite>}
  </div>
</div>



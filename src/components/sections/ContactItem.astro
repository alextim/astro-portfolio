---
export interface Props extends Link {
  icon: string;
  text: string;
}

import { Icon } from 'astro-icon';

const { icon, to, title, text } = Astro.props as Props;
---

<li class="block wow zoomIn rollIn" data-wow-delay="5s">
  <a href={to} target="_blank" rel="noindex noopener noreferrer" class="flex flex-col items-center">
    <Icon name={icon} class="h-12 w-12 mb-4 body-text__color" />
    <div>
      {title && <span class="mr-1 body-text__color">{title}:</span>}
      {text}
    </div>
  </a>
</li>

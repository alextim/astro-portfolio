---
import Picture from '@/components/Picture.astro';

export interface Props {
  item: SectionItem;
}

const {
  item: { title, content, image },
} = Astro.props as Props;
const aos = 'fade-up';
---

<li class='text-center'>
  {image?.src && <Picture src={image.src} alt={image.alt} attributes={{ picture: { class: 'mb-4', 'data-aos': aos } }} />}
  <h3 class='mb-4' data-aos={aos}>{title}</h3>
  <p data-aos={aos}>{content}</p>
</li>

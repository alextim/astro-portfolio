---
export interface Props {
  item: SectionItem;
}

import getImagePath from '@/lib/getImagePath';
import Image from '@/components/images/Image.astro';

const { item: { title, content, image } } = Astro.props as Props;
---

<div class="w-full lg:w-1/3 text-center">
  {image?.src && (
    <Image src={getImagePath(image.src)} alt={image.alt} classes="mb-4 w-full max-w-full h-full object-cover" imgClasses="w-full h-full max-w-full object-cover" caption={image.caption} />
  )}
  <h3 class="mb-4">{title}</h3>
  <p>{content}</p>
</div>

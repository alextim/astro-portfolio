---
export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  content?: string;
  classes?: string;
}

import Container from '@/components/Container.astro';

const { id, title, subtitle, content, classes = '' } = Astro.props as Props;
---

<section id={id} class={`py-24 lg:py-36 text-center ${classes}`}>
  <Container>
    {(title || subtitle) && (
      <div class="flex flex-col-reverse">
        {title && <h2 class="mb-18 text-lg">{subtitle}</h2>}
        {subtitle && <div class="mt-0 mb-8 font-normal text-xl uppercase text-center divider">{title}</div>}
      </div>
    )}
    {content && <div class="mb-18 text-justify" set:html={content} />}
    <slot />
  </Container>
</section>
